%tr{:id => configuration == @current_config ? "current_config" : "config"}
  %td= configuration.api_key
  %td= configuration.name
  %td= configuration.project_id
  %td= link_to 'Remove', user_project_config_path(current_user, :id => configuration.id), :method => 'delete', :confirm => "Are you sure you want to delete this configuration?", :remote => true
