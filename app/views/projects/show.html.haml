%h1 Project details
%p= "Name: #{@project.name}"
%p= "Created on: #{@project.created_on}"
%p= "Description: #{@project.description}"
%p= "Stories complete: #{@project.stories.count}"
%p= "Velocity: #{@project.velocity} point(s)"
%p= "1 point: #{@project.point_duration} day(s)"

%h2 Velocity by month
%table{:border => "2"}
  %tr
    %td Month
    %td Velocity
    %td Point Duration
  - @months.each do |month|
    %tr{:style => "text-align:right"}
      %td= month.name
      %td= month.velocity
      %td= month.point_duration

%h2 Stories in Archive
%table{:border => "2"}
  %tr
    %td{:style => "width:30px"} Id
    %td Text
    %td{:style => "width:50px"} Size
    %td{:style => "width:250px"} Started
    %td{:style => "width:250px"} Finished
    %td{:style => "width:50px"} Duration
  - @project.stories.each do |story|
    %tr{:style => "text-align:right"}
      %td= story.id
      %td{:style => "text-align:left"}= story.text
      %td= story.size
      %td= story.started_on
      %td= story.finished_on
      %td= story.metrics.attributes[:workTime]
