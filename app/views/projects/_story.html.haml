%tr.right{:class => story.color}
  %td= link_to_story(story)
  %td.story= story_text(story) 
  %td= size_format(story, @project.point_duration)
  %td= date_format(story.started_on)
  %td= date_format(story.finished_on)
  %td= story.point_duration.to_f.round(2)
  %td= story.duration.inspect
  %td= story.blocked_time.round(2) rescue 0
  %td= story.waiting_time.round(2) rescue 0
  %td= story.work_time.round(2) rescue 0
  %td= story.efficiency
