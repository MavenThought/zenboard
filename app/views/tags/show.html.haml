- title "Stories in #{@project.name} with tag #{@tag.name}"

%h3
  = tag_header(@project, @tag)
  #sep
  
#details
  = tag_metrics(@completed, @not_completed, @project)
  #sep

#velocity
  = tag_charts(@completed, @not_completed)
  #sep

#details_stories
  #stories
    = stories_by_phase(@completed + @not_completed)

