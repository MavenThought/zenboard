!!!
%html

  %head
    %title
      Zenboard - #{yield(:title)  || "AgileZen Companion"}
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "configurations"
    = stylesheet_link_tag "menu"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      #messages
        = render("shared/messages", :collection => @flash)

      = render("shared/menu")

      %h1= yield(:title)

      = yield
